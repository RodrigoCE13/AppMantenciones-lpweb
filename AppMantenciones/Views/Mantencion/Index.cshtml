@model IEnumerable<AppMantenciones.Models.Mantencion>

<div class="text-end">
    <a asp-action="Create" class="btn btn-info">Ingrear Mantencion</a>
</div>
<h2>Lista de mantenciones realizadas</h2>

<table class="table table-striped table-light text-center">
    <thead class="">
        <tr>
            <th>ID</th>
            <th>Tipo</th>
            <th>Precio</th>
            <th>Vehiculo</th>
            <th>Taller</th>
            <th>Descripcion</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.IdTipoMantencionNavigation.Nombre</td>
                <td>@item.Precio</td>
                <td>@item.IdVehiculoNavigation.Patente</td>
                <td>@item.IdTallerNavigation.Nombre</td>
                <td>@item.Descripcion</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success"><i class="fa-solid fa-pen-to-square"></i></a>
                    <a asp-action="Delete" onclick="return confirmarEliminarMantencion(@item.Id)" asp-route-id="@item.Id" class="btn btn-danger"><i class="fa-solid fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="text-end text-white">
    <h4>Total gastado: $@ViewBag.SumaTotal</h4>
</div>
