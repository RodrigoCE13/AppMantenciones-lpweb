<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AppMantenciones</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AppMantenciones.styles.css" asp-append-version="true" />
    <script src="https://kit.fontawesome.com/f083cb2fc8.js" crossorigin="anonymous"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">App<span style="color:deepskyblue">Mantenciones</span>  </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" >
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index"> Inicio</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Mantenciones</a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="nav-link text-dark dropdown-item " asp-area="" asp-controller="Mantencion" asp-action="Index"><i class="fa-regular fa-rectangle-list ms-2"></i> Control de mantenciones</a>
                                </li>
                                <li>
                                    <a class="nav-link text-dark dropdown-item " asp-area="" asp-controller="TipoMantencion" asp-action="Index"><i class="fa-solid fa-screwdriver-wrench ms-2"></i> Tipos de mantencion</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark dropdown-item " asp-area="" asp-controller="Taller" asp-action="Index"><i class="fa-solid fa-users-rectangle ms-2"></i> Mecanicos</a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Vehiculos</a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="nav-link text-dark dropdown-item " asp-area="" asp-controller="Vehiculo" asp-action="Index"><i class="fa-solid fa-car ms-2"></i> Control de vehiculos</a>
                                </li>
                                <li>
                                    <a class="nav-link text-dark dropdown-item " asp-area="" asp-controller="Marca" asp-action="Index"><i class="fa-brands fa-bandcamp ms-2"></i> Marcas de vehiculos</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>


    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted ">
        <div class="container text-white text-center">
            &copy; 2023 - AppMantenciones - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
