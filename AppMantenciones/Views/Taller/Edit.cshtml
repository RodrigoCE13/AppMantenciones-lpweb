@model AppMantenciones.Models.Taller
<h1>Editar Mecanico/Taller</h1>
<div>
    <form asp-action="Edit">
        <input type="hidden" asp-for="Id" />
        <div class="form-group text-white">
            <label class="form-label">Nombre</label>
            <input class="form-control mb-3" type="text" asp-for="Nombre" required/>
            <label class="form-label">Fono</label>
            <input class="form-control mb-3" type="text" asp-for="Fono" required/>
            <label class="form-label">Direccion</label>
            <input class="form-control mb-3" type="text" asp-for="Direccion" />
            <div class="mt-3">
                <input type="submit" value="Editar" class="btn btn-info" />
                <a asp-action="Index" value="Crear" class="btn btn-dark">Ver tabla</a>
            </div>
        </div>
    </form>
</div>
