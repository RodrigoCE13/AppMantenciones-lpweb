@model AppMantenciones.Models.MarcaVehiculo

<h1>Ingresar nueva marca</h1>
<div class="text-white">
    <form asp-action="Create">
        <label class="form-label">Nombre</label>
        <input class="form-control mb-3" type="text" asp-for="Nombre" required/>
        <div class="mt-3">
            <input type="submit" value="Crear" class="btn btn-info" />
            <a asp-action="Index" value="Crear" class="btn btn-dark">Ver tabla</a>
        </div>
        @if (ViewBag.Alert != null)
        {
            <div class="alert alert-danger mt-4" role="alert">
                @ViewBag.Alert
            </div>
                
        }
    </form>
</div>

