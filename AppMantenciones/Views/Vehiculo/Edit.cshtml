@model AppMantenciones.Models.Vehiculo

<h1>Editar vehiculo</h1>
<div class="row text-white">
    <form asp-action="Edit">
        <label>Patente</label>
        <input asp-for="Patente" class="form-control mb-3" required/>
        <label>Marca</label>
        <select asp-for="IdMarcaVehiculo" class="form-select mb-3" asp-items="ViewBag.IdMarcaVehiculo"></select>
        <label>Modelo</label>
        <input asp-for="Modelo" class="form-control mb-3" required/>
        <label>Tipo</label>
        <select asp-for="Tipo" class="form-select mb-3">
            <option>auto</option>
            <option>camion</option>
            <option>bus</option>
            <option>furgon</option>
        </select>
        <div class=" mt-3">
            <input type="submit" value="Editar" class="btn btn-info" />
            <a asp-action="Index" value="Crear" class="btn btn-dark">Ver tabla</a>
        </div>
    </form>
</div>