@model IEnumerable<AppMantenciones.Models.Vehiculo>

<div class="text-end">
    <a asp-action="Create" class="btn btn-info">Ingrear Vehiculos</a>
</div>
<h2>Lista de vehiculos</h2>

<table class="table table-striped table-light text-center">
    <thead class="">
        <tr>
            <th>ID</th>
            <th>Patente</th>
            <th>Marca</th>
            <th>Modelo</th>
            <th>Tipo</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Patente</td>
                <td>@item.IdMarcaVehiculoNavigation.Nombre</td>
                <td>@item.Modelo</td>
                <td>@item.Tipo</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success"><i class="fa-solid fa-pen-to-square"></i></a>
                    <a asp-action="Delete" onclick="return confirmarEliminarVehiculo(@item.Id)" asp-route-id="@item.Id" class="btn btn-danger"><i class="fa-solid fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
